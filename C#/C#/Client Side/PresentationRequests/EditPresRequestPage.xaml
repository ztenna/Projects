<!-- Contributor: Zachary Tennant -->
<!-- The purpose of this code is to construct the edit presentation page using xamarin forms. This page consists of multiple items: 
    1.) labels to indicate what to enter in the editor field
    2.) the editor field is where you enter whatever text you want and it is saved as the x:Name (Presentation ID, Time and Date Created are not editable)
    3.) the two buttons, first button is to submit the changes you made to the presentation 
        the second button is to exit this page in an efficient mannor
    If you have used java ActionListener, the buttons act the same way, the events generated by the buttons are sent to LocationPage.xaml.cs -->
    
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SPOT_App.EditPresRequestPage"
             Title="Edit Presentation Request">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="0" Padding="0">
                <StackLayout Spacing="0" Padding="10">

                    <StackLayout Spacing="0" Padding="0" Orientation="Horizontal">
                        <Label Text="Presentation ID:" TextColor="Black" FontSize="14" HorizontalOptions="Start" VerticalOptions="Center" MinimumWidthRequest="130" WidthRequest="130"/>
                        <Editor x:Name ="PresentationID" Text="{Binding PresentationID}" HorizontalOptions="FillAndExpand" MinimumWidthRequest="260" FontSize="14" IsReadOnly="true" />
                    </StackLayout>

                    <StackLayout Spacing="0" Padding="0" Orientation="Horizontal">
                        <Label Text="Time and Date Created:" TextColor="Black" FontSize="14" HorizontalOptions="Start" VerticalOptions="Center" MinimumWidthRequest="130" WidthRequest="130"/>
                        <Editor x:Name ="TimeDateCreated" Text="{Binding TimeDateCreated}" HorizontalOptions="FillAndExpand" MinimumWidthRequest="260" FontSize="14" IsReadOnly="true" />
                    </StackLayout>

                    <StackLayout Spacing="0" Padding="0" Orientation="Horizontal">
                        <Label Text="Name:" TextColor="Black" FontSize="14" HorizontalOptions="Start" VerticalOptions="Center" MinimumWidthRequest="130" WidthRequest="130"/>
                        <Editor x:Name ="Name" Text="{Binding Name}" HorizontalOptions="FillAndExpand" MinimumWidthRequest="260" FontSize="14" />
                    </StackLayout>

                    <StackLayout Spacing="0" Padding="0" Orientation="Horizontal">
                        <Label Text="Organization Name:" TextColor="Black" FontSize="14" HorizontalOptions="Start" VerticalOptions="Center" MinimumWidthRequest="130" WidthRequest="130"/>
                        <Editor x:Name ="OrgName" Text="{Binding OrgName}" HorizontalOptions="FillAndExpand" MinimumWidthRequest="260" FontSize="14" />
                    </StackLayout>

                    <StackLayout Spacing="0" Padding="0" Orientation="Horizontal">
                        <Label Text="Teacher Email:" TextColor="Black" FontSize="14" HorizontalOptions="Start" VerticalOptions="Center" MinimumWidthRequest="130" WidthRequest="130"/>
                        <Editor x:Name ="TeacherEmail" Text="{Binding TeacherEmail}" HorizontalOptions="FillAndExpand" MinimumWidthRequest="260" FontSize="14" IsReadOnly="true" />
                    </StackLayout>

                    <StackLayout Spacing="0" Padding="0" Orientation="Horizontal">
                        <Label Text="Ambassador Email Who Claimed Presentation First:" TextColor="Black" FontSize="14" HorizontalOptions="Start" VerticalOptions="Center" MinimumWidthRequest="130" WidthRequest="130"/>
                        <Editor x:Name ="AmbassadorEmail" Text="{Binding AmbassadorEmail}" HorizontalOptions="FillAndExpand" MinimumWidthRequest="260" FontSize="14" />
                    </StackLayout>
					
					<StackLayout Spacing="0" Padding="0" Orientation="Horizontal">
                        <Label Text="Additional Ambassadors Claim Presentation:" TextColor="Black" FontSize="14" HorizontalOptions="Start" VerticalOptions="Center" MinimumWidthRequest="130" WidthRequest="130"/>
                        <Editor x:Name ="OtherAmbassadorEmails" Text="{Binding OtherAmbassadorEmails}" HorizontalOptions="FillAndExpand" MinimumWidthRequest="260" FontSize="14" />
                    </StackLayout>

                    <StackLayout Spacing="0" Padding="0" Orientation="Horizontal">
                        <Label Text="Phone Number:" TextColor="Black" FontSize="14" HorizontalOptions="Start" VerticalOptions="Center" MinimumWidthRequest="130" WidthRequest="130"/>
                        <Editor x:Name ="PhoneNumber" Text="{Binding PhoneNumber}" HorizontalOptions="FillAndExpand" MinimumWidthRequest="260" FontSize="14" />
                    </StackLayout>

                    <StackLayout Spacing="0" Padding="0" Orientation="Horizontal">
                        <Label Text="Alternate Phone Number:" TextColor="Black" FontSize="14" HorizontalOptions="Start" VerticalOptions="Center" MinimumWidthRequest="130" WidthRequest="130"/>
                        <Editor x:Name ="AltPhoneNumber" Text="{Binding AltPhoneNumber}" HorizontalOptions="FillAndExpand" MinimumWidthRequest="260" FontSize="14" />
                    </StackLayout>

                    <StackLayout Spacing="0" Padding="0" Orientation="Horizontal">
                        <Label Text="Day and Time to Contact 'Teacher':" TextColor="Black" FontSize="14" HorizontalOptions="Start" VerticalOptions="Center" MinimumWidthRequest="130" WidthRequest="130"/>
                        <Editor x:Name ="ContactDayTime" Text="{Binding ContactDayTime}" HorizontalOptions="FillAndExpand" MinimumWidthRequest="260" FontSize="14" />
                    </StackLayout>

                    <StackLayout Spacing="0" Padding="0" Orientation="Horizontal">
                        <Label Text="Presentation Location:" TextColor="Black" FontSize="14" HorizontalOptions="Start" VerticalOptions="Center" MinimumWidthRequest="130" WidthRequest="130"/>
                        <Editor x:Name ="PresLocation" Text="{Binding PresLocation}" HorizontalOptions="FillAndExpand" MinimumWidthRequest="260" FontSize="14" />
                    </StackLayout>

                    <StackLayout Spacing="0" Padding="0" Orientation="Horizontal">
                        <Label Text="Requested Presentation(s):" TextColor="Black" FontSize="14" HorizontalOptions="Start" VerticalOptions="Center" MinimumWidthRequest="130" WidthRequest="130"/>
                        <Editor x:Name ="RequestedPres" Text="{Binding RequestedPres}" HorizontalOptions="FillAndExpand" MinimumWidthRequest="260" FontSize="14" />
                    </StackLayout>

                    <StackLayout Spacing="0" Padding="0" Orientation="Horizontal">
                        <Label Text="Presentation Rotations:" TextColor="Black" FontSize="14" HorizontalOptions="Start" VerticalOptions="Center" MinimumWidthRequest="130" WidthRequest="130"/>
                        <Editor x:Name ="PresRotations" Text="{Binding PresRotations}" HorizontalOptions="FillAndExpand" MinimumWidthRequest="260" FontSize="14" />
                    </StackLayout>

                    <StackLayout Spacing="0" Padding="0" Orientation="Horizontal">
                        <Label Text="Hands-On Activities:" TextColor="Black" FontSize="14" HorizontalOptions="Start" VerticalOptions="Center" MinimumWidthRequest="130" WidthRequest="130"/>
                        <Editor x:Name ="HandsOnActivities" Text="{Binding HandsOnActivities}" HorizontalOptions="FillAndExpand" MinimumWidthRequest="260" FontSize="14" />
                    </StackLayout>

                    <StackLayout Spacing="0" Padding="0" Orientation="Horizontal">
                        <Label Text="Grade Levels:" TextColor="Black" FontSize="14" HorizontalOptions="Start" VerticalOptions="Center" MinimumWidthRequest="130" WidthRequest="130"/>
                        <Editor x:Name ="GradeLevels" Text="{Binding GradeLevels}" HorizontalOptions="FillAndExpand" MinimumWidthRequest="260" FontSize="14" />
                    </StackLayout>

                    <StackLayout Spacing="0" Padding="0" Orientation="Horizontal">
                        <Label Text="Number of Students:" TextColor="Black" FontSize="14" HorizontalOptions="Start" VerticalOptions="Center" MinimumWidthRequest="130" WidthRequest="130"/>
                        <Editor x:Name ="NumberStudents" Text="{Binding NumberStudents}" HorizontalOptions="FillAndExpand" MinimumWidthRequest="260" FontSize="14" />
                    </StackLayout>

                    <StackLayout Spacing="0" Padding="0" Orientation="Horizontal">
                        <Label Text="Proposed Date and Time of Presentation:" TextColor="Black" FontSize="14" HorizontalOptions="Start" VerticalOptions="Center" MinimumWidthRequest="130" WidthRequest="130"/>
                        <Editor x:Name ="ProposedDateTime" Text="{Binding ProposedDateTime}" HorizontalOptions="FillAndExpand" MinimumWidthRequest="260" FontSize="14" />
                    </StackLayout>

                    <StackLayout Spacing="0" Padding="0" Orientation="Horizontal">
                        <Label Text="Supplies 'Teacher' has:" TextColor="Black" FontSize="14" HorizontalOptions="Start" VerticalOptions="Center" MinimumWidthRequest="130" WidthRequest="130"/>
                        <Editor x:Name ="Supplies" Text="{Binding Supplies}" HorizontalOptions="FillAndExpand" MinimumWidthRequest="260" FontSize="14" />
                    </StackLayout>

                    <StackLayout Spacing="0" Padding="0" Orientation="Horizontal">
                        <Label Text="Can 'Teacher' Pay Travel Fee:" TextColor="Black" FontSize="14" HorizontalOptions="Start" VerticalOptions="Center" MinimumWidthRequest="130" WidthRequest="130"/>
                        <Editor x:Name ="TravelFee" Text="{Binding TravelFee}" HorizontalOptions="FillAndExpand" MinimumWidthRequest="260" FontSize="14" />
                    </StackLayout>

                    <StackLayout Spacing="0" Padding="0" Orientation="Horizontal">
                        <Label Text="Concerns:" TextColor="Black" FontSize="14" HorizontalOptions="Start" VerticalOptions="Center" MinimumWidthRequest="130" WidthRequest="130"/>
                        <Editor x:Name ="Concerns" Text="{Binding Concerns}" HorizontalOptions="FillAndExpand" MinimumWidthRequest="260" FontSize="14" />
                    </StackLayout>

                    <StackLayout Spacing="0" Padding="0" Orientation="Horizontal">
                        <Label Text="Interest in Alternative Ways to Recieve Presentations:" TextColor="Black" FontSize="14" HorizontalOptions="Start" VerticalOptions="Center" MinimumWidthRequest="130" WidthRequest="130"/>
                        <Editor x:Name ="AltPres" Text="{Binding AltPres}" HorizontalOptions="FillAndExpand" MinimumWidthRequest="260" FontSize="14" />
                    </StackLayout>

                </StackLayout>
                <StackLayout Spacing="0" Padding="0" HorizontalOptions ="Center" Orientation="Horizontal">
                    <Button Text="Submit Changes" FontSize="14" Clicked="Edit_Pres_Request_Button_Clicked" MinimumWidthRequest="100" HeightRequest="100" HorizontalOptions="Center" VerticalOptions="Center"/>
                    <Button Text="Cancel" FontSize="14" Clicked="Cancel_Button_Clicked" HorizontalOptions="Center" VerticalOptions="Center"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>